<div class="container-fluid">

  <div class="favorite pull-right" >
      <% if current_user && current_user.is_favorite_of?(@movie) %>
        <%= link_to("取消收藏", favorite_movie_path(@movie, type:"unfavorite"), method: :post, class:"btn btn-default") %>
      <% else %>
        <%= link_to("添加收藏", favorite_movie_path(@movie, type:"favorite"),method: :post, class:"btn btn-danger") %>
      <% end %>
  </div>

  <div class="movie-info" style="padding-top:30px;">
     <div class="col-md-6">
       <% if @movie.image.present? %>
         <%= image_tag(@movie.image.medium.url, class:"thumbnail") %>
       <% else %>
         <%= image_tag("http://placehold.it/400x400&text=No Pic", class:"thumbnail") %>
       <% end %>
     </div>
     <div class="col-md-6">
        <h3 class="movie-title">
          <%= @movie.title %>
        </h3>
        <p class="movie-description">
            <%= @movie.description %>
        </p>
     </div>
   </div>

</div>
